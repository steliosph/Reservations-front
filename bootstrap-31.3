						<form class="" >
							<div class="row">
								<div class="col-sm-4">
									<div class="row">
							  		<div class="form-group col-xs-12 col-sm-12">
											<label for="editReservationrDate">Date</label>
											<input value="23 July, 2015" id="editReservationrDate" class="form-control form-control false" name="editReservationrDate" type="text"></input>
										</div>
										<div class="form-group col-xs-12 col-sm-12">
											<label for="editReservationrTime">Time</label>
											<input placeholder="Reservation time" value="19:00" id="editReservationrTime" class="form-control" name="editReservationrTime" type="text"></input>
										</div>
									</div>
								</div>
								<div class="form-group col-xs-12 col-sm-8">
									<label for="reservationComments">Comment</label>
									<textarea placeholder="Special Request (optional)" rows="5" id="reservationComments" class="form-control" name="reservationComments"></textarea>
								</div>
							</div>
							<div class="row">
								<div class="form-group col-xs-12 col-sm-4">
									<label for="peopleAmount">People Amount</label>
									<input placeholder="The people attending" data-translation-message="You must provide an integer value for People Amount." data-translation="integer" data-validation="true" value="2" id="peopleAmount" class="form-control form-control" name="peopleAmount" type="number"></input>
								</div>
								<div class="form-group col-xs-12 col-sm-4">
									<label for="smokingPreference">Smoking Preference</label>
									<select class="form-control form-control" id="select_0" name="select_0"><option value="144">Smoking</option><option value="145">Non Smoking</option></select>
								</div>
								<div class="form-group col-xs-12 col-sm-4">
									<label for="sittingLocation">Sitting Location</label>
									<select class="form-control form-control" id="select_1" name="select_1"><option value="146">Outside</option><option value="147">Inside</option></select>
								</div>
							</div>
							<div class="row">
								<div class="form-group col-xs-12">
									<input value="Update Reservation" id="updateReservation" class="btn btn-primary btn-reserve" data-submit-mode="normal" name="updateReservation" type="submit"></input>
									<a data-async-trigger="true" class="btn btn-danger btn-reserve" href="/Reservations/usereditreservation:confirmcancelreservation?t:ac=10">Cancel Reservation</a>
